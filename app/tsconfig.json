{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "lib": [
      "ES2020"
    ],
    "declaration": false,
    "removeComments": false,
    "outDir": "./build",
    "strict": true,
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "incremental": true,
    "moduleResolution": "nodenext",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "$": ["nesoi.ts"]
    }
  },
  "include": [
    "bin",
    "modules/shell/lib",
    "modules",
    "apps",
    "nesoi.ts",
    "eslint.config.mjs",
    ".nesoi"
  ],
  "exclude": [
    "node_modules"
  ]
}